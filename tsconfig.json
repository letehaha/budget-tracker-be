{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@js/*": ["js/*"],
      "shared-types": ["../shared-types"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "allowJs": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"]
}
